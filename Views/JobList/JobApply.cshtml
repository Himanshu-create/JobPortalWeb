@model JobPortalWeb.Models.JobApplicant

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Aply Job</title>
</head>
<body>
    <h1> Apply for Job ID : @ViewBag.JobID</h1>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Person Details</th>
            </tr>

            <tr>
                <td>Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.name)
                </td>
            </tr>

            <tr>
                <td>Collge Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.collegeName)
                </td>
            </tr>
            
            <tr>
                <td>Phone No: </td>
                <td>
                    @Html.TextBoxFor(m => m.phoneNo)
                </td>
            </tr>
            <tr>
                <td>Email ID: </td>
                <td>
                    @Html.TextBoxFor(m => m.emialid)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }
</body>
</html>